            lgName: "Python",
          },
          {
            src: "https://user-images.githubusercontent.com/25181517/117208740-bfb78400-adf5-11eb-97bb-09072b6bedfc.png",
            alt: "PostgreSQL",
            lgName: "PostgreSQL",
          },
          {
            src: "https://user-images.githubusercontent.com/25181517/202896760-337261ed-ee92-4979-84c4-d4b829c7355d.png",
            alt: "Tailwind",
            lgName: "TailwindCSS",
          },
        ]}
        url="https://github.com/OwlCode25/inventory_control"
      />
    </div>
  </div>
</section>

<style>
  /* Animaciones para entrada de proyectos */
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
  
  #projects .grid > * {
    animation: fadeIn 0.6s ease-out forwards;
    opacity: 0;
  }
  
  #projects .grid > :nth-child(1) { animation-delay: 0.1s; }
  #projects .grid > :nth-child(2) { animation-delay: 0.3s; }
  #projects .grid > :nth-child(3) { animation-delay: 0.5s; }
  #projects .grid > :nth-child(4) { animation-delay: 0.7s; }
</style>
