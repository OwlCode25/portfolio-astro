---
import Image from 'astro/components/Image.astro';
interface Props {
  name: string;
  desc: string;
  images: { src: any; alt: string; lgName: string }[];
  url: string
}

const { name, desc, images, url } = Astro.props;

---
<a href={url} class="cursor-pointer" rel="noreferrer" target="_blank">
<figure class="flex flex-col items-center justify-center p-8 text-center border md:rounded-se-lg bg-slate-600 border-gray-700 transition ease-in duration-300 hover:bg-slate-500">
  <blockquote class="max-w-2xl mx-auto mb-4 lg:mb-8 text-gray-400">
    <h3 class="text-lg font-semibold text-white">{name}</h3>
    <p class="my-4">{desc}</p>
  </blockquote>
  <figcaption class="flex items-center justify-center space-x-4">
    {images.map((image) => (
      <div class="flex items-center">
        <Image class="h-40" src={image.src} width="100" height="100" class="w-10 h-10" alt={image.alt} />
        <div class="ml-2 hidden md:block">
          <div class="text-sm font-medium dark:text-white text-left rtl:text-right">{image.lgName}</div>
        </div>
      </div>
    ))}
  </figcaption>    
  <br/>
</figure>
</a>