---
import Image from 'astro/components/Image.astro';
interface Props {
  name: string;
  desc: string;
  images: { src: any; alt: string; lgName: string }[];
  url: string
}

const { name, desc, images, url } = Astro.props;
---

<a href={url} class="cursor-pointer block h-full" rel="noreferrer" target="_blank">
  <figure class="flex flex-col items-center h-full justify-center p-6 sm:p-8 text-center border rounded-lg bg-gradient-to-br from-blue-navy to-blue-midnight border-blue-cobalt/30 transition-all duration-300 hover:shadow-lg hover:from-blue-midnight hover:to-blue-cobalt">
    <blockquote class="max-w-2xl mx-auto mb-4 lg:mb-6">
      <h3 class="text-xl font-bold text-neutral-white mb-3">{name}</h3>
      <p class="my-4 text-neutral-light text-sm sm:text-base">{desc}</p>
    </blockquote>
    
    <figcaption class="flex flex-wrap items-center justify-center gap-4">
      {images.map((image) => (
        <div class="flex flex-col items-center group">
          <div class="w-12 h-12 bg-neutral-white rounded-full p-2 flex items-center justify-center shadow-sm transition-transform duration-300 group-hover:scale-110">
            <Image src={image.src} width="100" height="100" class="w-8 h-8 object-contain" alt={image.alt} />
          </div>
          <div class="mt-2">
            <div class="text-xs font-medium text-neutral-light">{image.lgName}</div>
          </div>
        </div>
      ))}
    </figcaption>
    
    <div class="mt-6 inline-flex items-center px-4 py-2 bg-blue-bright hover:bg-blue-cobalt text-neutral-white text-sm font-medium rounded-lg transition-colors duration-300 shadow-sm">
      Ver proyecto
      <svg xmlns="http://www.w3.org/2000/svg" class="ml-2 w-4 h-4" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
        <path d="M17 7l-10 10"></path>
        <path d="M8 7l9 0l0 9"></path>
      </svg>
    </div>
  </figure>
</a>
