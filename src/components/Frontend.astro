---
import css from "../assets/css3.jpg";
import html from "../assets/html5.webp";
import js from "../assets/javascript.jpg";
import react from "../assets/react.png";
import Card from "./Card.astro";
---




<div id="skills" class="mt-10 flex flex-col m-8 mb-40">
    <div class="flex items-center justify-center">
      <h3 class="text-3xl text-slate-700 mr-2">
        Frontend
      </h3>
    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-pencil-star" width="44" height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="#334155" fill="none" stroke-linecap="round" stroke-linejoin="round">
  <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
  <path d="M17.5 10.5l1 -1a2.828 2.828 0 1 0 -4 -4l-10.5 10.5v4h4l2 -2" />
  <path d="M13.5 6.5l4 4" />
  <path d="M17.8 20.817l-2.172 1.138a.392 .392 0 0 1 -.568 -.41l.415 -2.411l-1.757 -1.707a.389 .389 0 0 1 .217 -.665l2.428 -.352l1.086 -2.193a.392 .392 0 0 1 .702 0l1.086 2.193l2.428 .352a.39 .39 0 0 1 .217 .665l-1.757 1.707l.414 2.41a.39 .39 0 0 1 -.567 .411l-2.172 -1.138z" />
</svg>
    </div>
    <div class="flex flex-row flex-wrap justify-between mt-10 gap-20">
      <Card
        link="https://developer.mozilla.org/es/docs/Web/HTML"
        img={html}
        name="HTML5"
      />

      <Card
        link="https://tailwindcss.com/"
        img={css}
        name="CSS3"
      />
      <Card
        link="https://developer.mozilla.org/es/docs/Web/JavaScript"
        img={js}
        name="Javascript (ES6+)"
      />
      <Card
        link="https://es.react.dev/"
        img={react}
        name="ReactJS"
      />
    </div>